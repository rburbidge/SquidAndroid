     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     tools:context="com.sirnommington.squid.activity.intro.InstallAppsFragment">
    <ImageView
        android:id="@+id/install_chrome"
        android:src="@drawable/chrome_web_store_badge"
        style="@style/InstallBadge"/>
    <ImageView
        android:id="@+id/install_android"
        android:src="@drawable/google_play_badge"
        style="@style/InstallBadge"/>

</LinearLayout>
