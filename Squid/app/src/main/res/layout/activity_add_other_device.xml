<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sirnommington.squid.activity.share.AddOtherDeviceActivity"
    style="@style/SquidActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_other_device_how_to"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_other_device_install_on_chrome"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200sp"
        android:src="@drawable/google_play_badge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_other_device_install_on_chrome"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200sp"
        android:src="@drawable/chrome_web_store_badge"/>
</LinearLayout>
